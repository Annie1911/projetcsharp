@page "/admin/membre-de-comite/creer"
@using projetcsharp.DTO.Membre_de_comite

<PageTitle>Créer membre</PageTitle>

<h3>Créer un nouveau Membre de Comité</h3>

<div class="mb-3">
    <EditForm Model="comiteDTO" FormName="AjouterMembre" OnValidSubmit="AjouterMembre">
        <DataAnnotationsValidator />
        
        <div class="form-group mb-3">
            <label for="email" class="form-label">E-mail</label>
            <InputText id="email" class="form-control" @bind-Value="comiteDTO.Email" />
            <ValidationMessage For="@(() => comiteDTO.Email)" />
        </div>
        <div class="form-group mb-3">
            <label for="password" class="form-label">Password</label>
            <InputText id="password" type="password" class="form-control" @bind-Value="comiteDTO.Password" />
            <ValidationMessage For="@(() => comiteDTO.Password)" />
        </div>
        <div class="form-group mb-3">
            <label for="confirmPassword" class="form-label">Confirm Password</label>
            <InputText id="confirmPassword" class="form-control" @bind-Value="comiteDTO.ConfirmPassword" />
            <ValidationMessage For="@(() => comiteDTO.ConfirmPassword)" />
        </div>

    </EditForm>
</div>
<button type="submit" class="btn btn-primary" @onclick="@AjouterMembre">Enregistrer</button>

@code {
    [SupplyParameterFromForm]
    private MembreComiteDTO comiteDTO { get; set; } = new();

